<!--index.wxml-->
<view class="page dashboard">
    <view class="weui-flex">
        <view wx:if="{{todaySummary}}" class="weui-flex__item">
            今天你已码字
            <view class="highlight">
                {{ todaySummary.cummulative_total.text }}
            </view>
        </view>
    </view>
    <view class="dashboard-body">
        <view wx:if="{{todaySummary}}" bind:tap="showDetailModal">
            参与项目：{{todaySummary.data[0].projects[0].name}}（{{todaySummary.data[0].projects[0].percent}}%）
            <mp-icon icon="info" color="black" size="{{14}}"></mp-icon>
        </view>
        <view wx:if="{{todaySummary}}">
            开发语言：{{todaySummary.data[0].languages[0].name}}（{{todaySummary.data[0].languages[0].percent}}%）
            <mp-icon icon="info" color="black" size="{{14}}"></mp-icon>
        </view>
        <view wx:if="{{todaySummary}}">
            编辑器：{{todaySummary.data[0].editors[0].name}}（{{todaySummary.data[0].editors[0].percent}}%）
            <mp-icon icon="info" color="black" size="{{14}}"></mp-icon>
        </view>
        <view wx:if="{{todaySummary}}">
            操作系统：{{todaySummary.data[0].operating_systems[0].name}}（{{todaySummary.data[0].operating_systems[0].percent}}%）
            <mp-icon icon="info" color="black" size="{{14}}"></mp-icon>
        </view>
    </view>
    <mp-dialog
            show="{{showDetailModal}}"
            maskClosable="{{true}}"
            title="参与项目"
            desc=""
            buttons="{{buttons}}"
    >
        <view>
            hello world
        </view>
    </mp-dialog>
</view>



