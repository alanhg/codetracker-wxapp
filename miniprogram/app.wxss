@import 'miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

.page {
    width: 100vw;
    height: 100vh;
    padding: 40rpx 16rpx;
    background-color: var(--weui-BG-0);
    font-size: 16px;
    overflow: hidden;
}

.timer {
    font-weight: 700;
    color: #1485ee;
    text-decoration: underline;
    font-size: 20px;
}

.highlight {
    font-size: 22px;
    color: #fa5151;
}

.dashboard {
    background-size: 114%;
    background-repeat: no-repeat;
    background-position: -110rpx 432rpx;
    background-image: url("https://static.1991421.cn/codetracker/bricklayer-pana.png");
}

.dashboard-body {
    line-height: 50rpx;
}

page {
    overflow-x: hidden;
}

.share {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 40rpx;
    right: 38rpx;
}

.footer {
    text-align: center;
    font-size: 14px;
    color: var(--weui-FG-1);
    position: fixed;
    bottom: 200rpx;
    width: 100vw;
}

.center {
    text-align: center;
}

.h2 {
    padding-top: 10px;
}

.mt-1n {
    margin-top: 5rpx;
}

.mt-2n {
    margin-top: 10rpx;
}

.mt-4n {
    margin-top: 20rpx;
}

.hidden {
    opacity: 0;
}
